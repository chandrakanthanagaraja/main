{
	"name": "dataflow_activity_update_watermark_dt",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_storageacct_stage",
						"type": "DatasetReference"
					},
					"name": "LoadDataFromCSV"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_azure_edwdb",
						"type": "DatasetReference"
					},
					"name": "SinkUpdateWatermarkDt"
				}
			],
			"transformations": [
				{
					"name": "AggActGetMaxDate"
				},
				{
					"name": "AlterRowIfDateIsNotNull"
				},
				{
					"name": "DerivedKeyCol"
				}
			],
			"scriptLines": [
				"parameters{",
				"     watermark_col_name as string,",
				"     watermark_val_dt_fmt as string,",
				"     dest_table_name as string",
				"}",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> LoadDataFromCSV",
				"LoadDataFromCSV aggregate(Max_Date = max(toTimestamp(toString(byName($watermark_col_name)), toString($watermark_val_dt_fmt)))) ~> AggActGetMaxDate",
				"DerivedKeyCol alterRow(updateIf(isNull(Max_Date) == false())) ~> AlterRowIfDateIsNotNull",
				"AggActGetMaxDate derive(KeyColName = $dest_table_name) ~> DerivedKeyCol",
				"AlterRowIfDateIsNotNull sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          source as string,",
				"          source_table as string,",
				"          dest_table as string,",
				"          source_cols_for_staging as string,",
				"          watermark_col as string,",
				"          watermark_val as string,",
				"          enabled as boolean,",
				"          load_type as string,",
				"          status as string,",
				"          source_data_date_format as string",
				"     ),",
				"     deletable:false,",
				"     insertable:false,",
				"     updateable:true,",
				"     upsertable:false,",
				"     keys:['dest_table'],",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          dest_table = KeyColName,",
				"          watermark_val = Max_Date",
				"     )) ~> SinkUpdateWatermarkDt"
			]
		}
	}
}